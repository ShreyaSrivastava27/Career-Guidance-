@{
    ViewBag.Title = "discussion";
    Layout = "~/Views/Shared/second.cshtml";
}




<div class="row">
    <div class="col-sm-12"style="min-height:60px;text-align:center;">
     <span style="color:black;font-size:30px;">Discussion Board</span>   
    </div>
    
</div>
<form action="/User/discussion"method="post">
<div class="row">
    <div class="col-sm-10">
        <textarea name="txtquestion" class="form-control"style="height:120px;border:2px solid black;"placeholder="Type your question...."></textarea>
    </div>
    <div class="col-sm-2"style="margin-top:20px;">

        
        <input type="submit"class="btn btn-success"style="height:80px;width:200px;font-size:30px;"value="Post question" />

    </div>
</div>
</form>
  <div class="row">
            <div class="col-sm-12"style="min-height:100px;padding:20px;font-size:18px;">
                @using spicarrierguideness.Models;

                @{
                  
                    
                    
                    ConnectionManager cm = new ConnectionManager();
                    string command = "select * from tbl_question";
                    System.Data.DataTable dt = cm.GetBulkRecord(command);
                    if(dt.Rows.Count>0){
                        string div = "";
                     for(int i=0;i<dt.Rows.Count;i++)
                     {
                         <p style="color:black;font-size:22px;">@(i+1)). @dt.Rows[i][1].ToString()
                            <a href="/User/answer?aid=@dt.Rows[i][0].ToString()"style="color:blue;margin-left:50px;text-decoration:underline;">Post Answer</a>
                              <a href="/User/Viewans?vid=@dt.Rows[i][0].ToString()"style="color:blue;margin-left:50px;text-decoration:underline;">View Answer</a> 
                             
                         </p>
                    
                        // div += "<div class='row'><div class='col-sm-12'style='color:red'>" + dt.Rows[i][1].ToString() + "</div>";
                     }   
                    }
                  }
                
            </div>


        </div>
